<div class="row">
  <%= form_for @factory, html: { role: :form, class: "col-md-6" } do |f| %>
    <% if @factory.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@factory.errors.count, "error") %> prohibited this factory from being saved:</h2>

        <ul>
        <% @factory.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :address %><br />
      <%= f.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :company_id %><br />
      <%= f.collection_select :company_id, Company.order(:name), :id, :name, {}, { class: "form-control" } %>
    </div>

    <div class="actions">
      <%= f.submit nil, class: "btn btn-success" %>
    </div>
  <% end %>
</div>
